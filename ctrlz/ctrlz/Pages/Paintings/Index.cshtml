@page
@model ctrlz.Pages.Paintings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].DateOfCreation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Painting[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Painting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
