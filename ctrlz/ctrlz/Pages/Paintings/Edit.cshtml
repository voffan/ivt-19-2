@page
@using ctrlz.Classes
@model ctrlz.Pages.Paintings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Painting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Painting.Id" />
            <div class="form-group">
                <label asp-for="Painting.Name" class="control-label"></label>
                <input asp-for="Painting.Name" class="form-control" />
                <span asp-validation-for="Painting.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Value" class="control-label"></label>
                <input asp-for="Painting.Value" class="form-control" />
                <span asp-validation-for="Painting.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.DateOfCreation" class="control-label"></label>
                <input asp-for="Painting.DateOfCreation" class="form-control" />
                <span asp-validation-for="Painting.DateOfCreation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Author" class="control-label"></label>
                <select asp-for="Painting.AuthorId" class="form-control" asp-items="ViewBag.AuthorId"></select>
                <span asp-validation-for="Painting.Author.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Genre" class="control-label"></label>
                <select asp-for="Painting.GenreId" class="form-control" asp-items="ViewBag.GenreId"></select>
                <span asp-validation-for="Painting.Genre.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Location" class="control-label"></label>
                <select asp-for="Painting.LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="Painting.Location.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Painting.Status" class="control-label"></label>
                <select asp-for="Painting.Status" asp-items="Html.GetEnumSelectList<Status>()"></select>
                <span asp-validation-for="Painting.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
