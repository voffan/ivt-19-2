@page "{id:int?}"
@model PaintingsModel
 
@{
    ViewData["Title"] = "Картины";
}
<h2>@ViewData["Title"]</h2>
 
<p><a asp-page="/CreatePage/CreatePainting">Добавить картину</a></p>
<table class="table">
    <thead>
        <tr><th>Имя</th><th>Стоимость</th><th>Год</th><th>Автор</th><th>Жанр</th><th>Местонахождение</th></tr>
    </thead>
    <tbody>
        @foreach (var painting in Model.Painting)
        {
            <tr>
                <td>@painting.Name</td>
                <td>@painting.Value</td>
                <td>@painting.DateOfCreation</td>
                <td>@painting.Author</td>
                <td>@painting.Genre</td>
                <td>@painting.Location</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@Painting.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@Painting.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@Painting.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>