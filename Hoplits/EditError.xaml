<Window x:Class="Hoplits.EditError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hoplits"
        mc:Ignorable="d"
        Title="EditError" Height="400" Width="480">
    <Grid Loaded="Form_Load">
        <Grid.RowDefinitions>
            <RowDefinition Height="316*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Left" Margin="59,49,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="383" Height="106" Name="textbox_desc"/>
        <DatePicker HorizontalAlignment="Left" Margin="59,169,0,0" VerticalAlignment="Top" Width="120" Name="datepicker" Height="24"/>
        <ComboBox HorizontalAlignment="Left" Margin="59,213,0,0" VerticalAlignment="Top" Width="120" Name="cb_errortype" Height="22"/>
        <ComboBox HorizontalAlignment="Left" Margin="59,257,0,0" VerticalAlignment="Top" Width="120" Name="cb_employeeid" SelectedValuePath="id" DisplayMemberPath="name" Height="22"/>
        <Button Content="Save changes" HorizontalAlignment="Left" Margin="353,10,0,0" VerticalAlignment="Top" Width="89" Grid.Row="1" Click="Button_Click" Height="25"/>

    </Grid>
</Window>
