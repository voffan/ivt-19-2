<Page x:Class="AchieveNow.Pages.CompetitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AchieveNow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список мероприятий"
      Loaded="Page_Loaded"
      ContextMenuClosing="Page_ContextMenuClosing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid AutoGenerateColumns="False" x:Name="competitionsGrid">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Id}" Header="ID" Width="30"/>
                <DataGridTextColumn Binding="{Binding Name}" Header="Название" Width="150"/>
                <DataGridTextColumn Binding="{Binding Location}" Header="Локация" Width="120"/>
                <DataGridTextColumn Binding="{Binding SportKind}" Header="Вид спорта" Width="100"/>
                <DataGridTextColumn Binding="{Binding DateOfExecution}" Header="Дата проведения" Width="110"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
