<Window x:Class="AchieveNow.Pages.ShowErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AchieveNow.Pages"
        mc:Ignorable="d"
        Title="Ошибка! Нет соединения" Height="100" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center">Нет соединения.<LineBreak/>Проверьте доступ к интернету или попробуйте позже</TextBlock>
        <Button Grid.Row="1" Content="Понятно" HorizontalAlignment="Center" VerticalAlignment="Center" IsDefault="True" Click="Button_Click"></Button>
    </Grid>
</Window>
